<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="0dp">
    <Button
        android:id="@+id/bluetooth_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Bluetooth"
        android:drawableLeft="@drawable/ic_bluetooth_white_24dp"
        android:textSize="24sp"/>
    <Button
        android:id="@+id/speaker_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Speaker"
        android:drawableLeft="@drawable/ic_volume_2"
        android:textSize="24sp"/>
    <Button
        android:id="@+id/phone_earpic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Phone"
        android:drawableLeft="@drawable/ic_phone_call"
        android:textSize="24sp"/>

</LinearLayout>